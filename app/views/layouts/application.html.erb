<!DOCTYPE html>
<html>
<meta name="viewport" content="initial-scale=1">
<head>
  <title>Spotihunt - Spotify Playlist Hunter</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://netdna.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content="" />
  <meta name="keywords" content="" />
  <link rel="stylesheet" href="/css/style.css" />
</head>
<body class="landing">

<!-- Page Wrapper -->
<div id="page-wrapper">

  <!-- Header -->
    <header id="header" class="alt">
      <h1><a href="javascript:void(0);" onclick="$('html, body').animate({ scrollTop: 0 }, 500);">Spotihunt</a></h1>
      <nav id="nav">
        <ul>
          <li class="special">
            <a href="#" class="menuToggle"><span>Menu</span></a>
            <div id="menu">
              <% if user_signed_in? %>
                <%= image_tag current_user.image, width: "100", height: "100", class: "img-responsive center-block" %>
                <p class="text-center"><strong><%= current_user.name %></strong></p>
                <hr>
              <% end %>
              <ul>
                <li>
                  <%= link_to "Home", root_path, data: { no_turbolink: true } %>
                </li>
                <li> <%= link_to "About", "#" %></li> 
                <% if user_signed_in? %>
                  <li> <%= link_to "All Hunts", statuses_path %></li>
                  <li><%= link_to "Log out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
                <% else %>
                  <li>
                    <%= link_to "Log In with Spotify", omniauth_authorize_path(:user, :spotify) %>
                  </li>
                <% end %>
              </ul>
            </div>
          </li>
        </ul>
      </nav>
    </header>

  <%= yield %>
  
  <!-- Footer -->
    <footer id="footer">
      <ul class="icons">
        <li><a href="https://twitter.com/Spotihunt" target="_blank" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
        <li><a href="https://www.facebook.com/pages/Spotihunt/380194025503161?fref=ts" target="_blank" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
        <li><a href="mailto:spotihunt@gmail.com" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
      </ul>
      <ul class="copyright">
        <li>&copy; spotihunt.com 2015</li>
      </ul>
    </footer>

</div>
<!-- Scripts -->
<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.scrollex.min.js"></script>
<script src="/js/jquery.scrolly.min.js"></script>
<script src="/js/skel.min.js"></script>
<script src="/js/init.js"></script>

</body>
</html>

