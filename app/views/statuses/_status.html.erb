<div class="status">
  <%= render "voting", status: status %>
  <%= image_tag status.image, width: "50", height: "50" %>
  <strong><%= status.name %></strong>
  <p><%= status.content %></p>
  <div class="meta">
    <%= link_to time_ago_in_words(status.created_at) + " ago", status %> 
    <span class="admin">
      | <%= link_to "Edit", edit_status_path(status) %>
      | <%= link_to "Delete", status, method: :delete, data:{ confirm: "Are you sure you want to delete this Hunt?"} %>
    </span>

  </div>
</div>